# =============================================
# SERVER/BACKEND Environment Variables
# =============================================
NODE_ENV=production
PORT=5000

# Supabase Database Connection
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DATABASE_URL=postgresql://postgres.xxx:password@aws-0-region.pooler.supabase.com:5432/postgres

# Session & Security
SESSION_SECRET=generate-a-random-32-character-string-here

# Frontend URL (for CORS)
FRONTEND_URL=https://your-render-app.onrender.com

# =============================================
# FRONTEND Environment Variables
# =============================================
# These must be prefixed with VITE_ to be accessible in the browser

VITE_API_URL=https://your-render-backend.onrender.com
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
